<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3locallang>
	<meta type="array">
		<type>module</type>
		<description>
			Language labels for form labels.
			The file »locallang-form.xml« will be loaded from the path set as
			»settings.languageRootPath« in TypoScript.

			Localisation keys / label indexes follow the convention:
				* label for input FOO: input.FOO
				* label for child-item BAR in control FOO (e.g. select options): input.FOO-BAR
				* placeholder for input FOO: input.FOO.placeholder
		</description>
	</meta>
	<data type="array">
		<languageKey index="default" type="array">
			<label index="input.default">search term...</label>
			<label index="input.raw">Solr Query</label>

			<label index="input.sort">Sort By</label>
			<label index="input.sort-default">Default</label>
			<label index="input.count">Results</label>
		</languageKey>

		<languageKey index="de" type="array">
			<label index="input.default">Suchbegriffe...</label>
			<label index="input.raw">Solr Abfrage</label>

			<label index="input.sort">Sortierung</label>
			<label index="input.sort-default">Standard</label>
			<label index="input.count">Trefferzahl</label>
		</languageKey>

		<languageKey index="fr" type="array">
			<label index="input.default">terme de recherche</label>
			<label index="input.raw">Requête Solr</label>

			<label index="input.sort">trier par</label>
			<label index="input.sort-default">Standard</label>
			<label index="input.count">Nombre de résultats</label>
		</languageKey>
	</data>
</T3locallang>
